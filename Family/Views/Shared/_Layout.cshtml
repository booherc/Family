<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booher</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Compiled and minified CSS -->
    <link type="text/css" rel="stylesheet" href="~/Content/materialize.min.css" media="screen,projection" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <nav class="blue">
        <div class="nav-wrapper">
            @Html.ActionLink("Booher Family", "Index", "Home", new { area = "" }, new { @class = "brand-logo center" })
            <ul id="nav-mobile" class="left hide-on-med-and-down">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                @if (Request.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Contacts", "Index", "Contact")</li>
                    <li>@Html.ActionLink("Posts", "Index", "Post")</li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cody Booher</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <!-- Compiled and minified JavaScript -->
    <script type="text/javascript" src="~/Scripts/materialize.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
